@model IEnumerable<TeamLocum.Web.Models.Holiday>

@{
    ViewData["Title"] = "Holidays Master";
}

<h1>Holidays Master</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Holiday</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Details</td>
        </tr>
}
    </tbody>
</table>
