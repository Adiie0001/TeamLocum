@model IEnumerable<TeamLocum.Web.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Location</th>
            <th>Client</th>
            <th>Locum</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToShortDateString() @item.StartTime - @item.EndTime</td>
            <td>@item.Location</td>
            <td>@item.Client.CompanyName</td>
            <td>@(item.Locum != null ? item.Locum.User.FirstName : "Unassigned")</td>
            <td>@item.Status</td>
        </tr>
}
    </tbody>
</table>
